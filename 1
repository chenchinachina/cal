package main

import (
 "fmt"
 "strings"
)

func main() {
 var input string
 fmt.Print("Введите запрос (например, 'II+III'): ")
 fmt.Scanln(&input)

 operator := ""
 if strings.Contains(input, "+") {
  operator = "+"
 } else if strings.Contains(input, "-") {
  operator = "-"
 } else if strings.Contains(input, "*") {
  operator = "*"
 } else if strings.Contains(input, "/") {
  operator = "/"
 } else {
  fmt.Println("Неверный оператор")
  return
 }

 values := strings.Split(input, operator)
 if len(values) != 2 {
  fmt.Println("Неверный формат ввода")
  return
 }

 a := parseValue(values[0])
 b := parseValue(values[1])

 result := calculate(a, b, operator)

 fmt.Printf("Результат: %d\n", result)
}

func parseValue(value string) int {
 var result int
 switch value {
 case "I":
  result = 1
 case "II":
  result = 2
 case "III":
  result = 3
 case "IV":
  result = 4
 case "V":
  result = 5
 case "VI":
  result = 6
 case "VII":
  result = 7
 case "VIII":
  result = 8
 case "IX":
  result = 9
 case "X":
  result = 10
 default:
  fmt.Println("Некорректное значение")
 }
 return result
}

func calculate(a, b int, operator string) int {
 var result int
 switch operator {
 case "+":
  result = a + b
 case "-":
  result = a - b
 case "*":
  result = a * b
 case "/":
  result = a / b
 }
 return result
}
